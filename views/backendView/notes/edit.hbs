<h1>Modifier une note</h1>
<section class="formContainer bloc">
    <form action="/notes/update/{{note._id}}" method="POST" enctype="multipart/form-data">
        <p>
            <label class="label">Titre de la note :</label><br />
            <input class="input" type="text" name="title" value="{{note.title}}">
        </p>
        <p>
            <label for="content">Contenu :</label>
            <textarea class="textarea" name="content">{{{note.content}}}</textarea>
            <script>
                CKEDITOR.replace(
                    ('content'));
                CKEDITOR.config.entities = false;
                CKEDITOR.config.entities_latin = false;
            </script>
        </p>
        <p>
            <input class="button" type="submit" value="Envoyer" />
            <a href="/admin/welcome">Annuler</a>
        </p>
    </form>
</section>