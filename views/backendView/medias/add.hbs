<h1>Ajouter un media</h1>
<section class="formContainer bloc">
    {{>flash_messages}}
        <form action="/medias/create" method="POST" enctype="multipart/form-data">
            <p>
                <label class="label">lien du média</label>
                <input class="input" type="url" name="link">
            </p>
            <p>
                <label class="label">titre du média</label>
                <input class="input" type="text" name="title">
            </p>
            <p>
                <label for="content">Description</label>
            <textarea class="textarea" name="content"></textarea>
            <script>
                CKEDITOR.replace(
                    ('content'));
                CKEDITOR.config.entities = false;
                CKEDITOR.config.entities_latin = false;
            </script>
            </p>
            <p>
                <label for="fbLink">Lien facebook</label>
                <input class="input" type="url" name="fbLink">
            </p>
            <p>
                <label for="twLink">Lien twitter</label>
                <input class="input" type="url" name="twLink">
            </p>
            <p>
                <label for="image">Choisir une image</label>
                <input class="file-input" type="file" name="image">
                
            </p>
            <p>
                <input class="button" type="submit" value="Envoyer" />
                <a  href="/">Annuler</a>
            </p>
        </form>
</section>