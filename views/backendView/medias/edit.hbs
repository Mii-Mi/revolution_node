<section class="formContainer bloc">
    <form action="/medias/update" method="POST" enctype="multipart/form-data">
        <p>
            <label class="label">lien du média</label>
            <input class="input" type="url" name="link" value="{{media.link}}">
        </p>
        <p>
            <label class="label">titre du média</label>
            <input class="input" type="text" name="title" value="{{media.title}}">
        </p>
        <p>
            <label for="content">Description</label>
            <textarea class="textarea" name="content">{{{media.content}}}</textarea>
            <script>
                CKEDITOR.replace(
                    ('content'));
                CKEDITOR.config.entities = false;
                CKEDITOR.config.entities_latin = false;
            </script>
        </p>
        <p>
            <label for="fbLink">Lien facebook</label>
            <input class="input" type="url" name="fbLink" value="{{media.fbLink}}">
        </p>
        <p>
            <label for="twLink">Lien twitter</label>
            <input class="input" type="url" name="twLink" value="{{media.twLink}}">
        </p>
        <p>
            <label for="image">Choisir une image</label>
            <input class="file-input" type="file" name="image">

        </p>
        <p>
            <input class="button" type="submit" value="Modifier" />
            <a href="/">Annuler</a>
        </p>
        <input class="input" type="hidden" name="imageOld" value="{{media.image}}">
        <input class="input" type="hidden" name="mediaId" value="{{media.id}}">
    </form>
</section>