<h1>Liste des Éditos</h1>
<section class="bloc">
    <a href="/editos/add" class="button">Ajouter une annonce</a>
    {{#if edito}}
    {{#each edito}}
    <table class="memberTable bloc separated">
        <tr>
            <th>date</th>
            <th>auteur</th>
            <th>titre</th>
            <th>contenu</th>
            <th>action</th>
        </tr>
        <tr>
            <td>{{formatDate}}</td>
            <td><a href="/userProfile/{{author}}">{{author}}</a></td>
            <td>{{title}}</td>
            <td>{{{content}}}</td>
            <td>
                {{#if active}}
                <p><a href="/editos/unactive/{{_id}}" class="button danger">Désactiver</a></p>
                {{else}}
                <p><a href="/editos/active/{{_id}}" class="button">Activer</a></p>
                {{/if}}
                <p><a href="/editos/edit/{{_id}}" class="button modo">Modifier</a></p>
                <p><a href="/editos/delete/{{_id}}" class="button danger">Supprimer</a></p>
            </td>
        </tr>

    </table>
    {{/each}}
    {{/if}}
</section>
