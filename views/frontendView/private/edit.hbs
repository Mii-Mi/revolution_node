<header>
    <h1>Message priv√©</h1>
    <h2>Modifier une discussion avec {{dest.userName}}</h2>
</header>

<section class="formContainer bloc">
    <form action="/mp/{{mp._id}}" method="POST" enctype="multipart/form-data">
        <p>
            <label class="label">Titre de la conversation :</label>
            <input class="input" type="text" name="title" value="{{mp.title}}">
        </p>
        <p>
            <label for="content">Contenu :</label>
            <textarea class="textarea" name="content">{{mp.content}}</textarea>
            <script>
                CKEDITOR.replace(
                    ('content'));
                CKEDITOR.config.entities = false;
                CKEDITOR.config.entities_latin = false;
            </script>
        </p>
        <p>
            <input class="button" type="submit" value="Modifier" />
            <a href="/">Annuler</a>
        </p>
    </form>
</section>