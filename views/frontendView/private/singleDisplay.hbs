<header>
    <h1></h1>
    <h2>Conversation privée entre {{mp.author}} et {{mp.dest}}</h2>
</header>
<section class="articleSection">
    <div class="bloc">
        <h3>{{mp.title}}</h3>
        {{{mp.content}}}
        <p class="mpFoot">Envoyé par <a href="/userProfile/{{mp.authorId}}">{{mp.author}}</a> pour <a href="/userProfile/{{mp.destId}}">{{mp.dest}}</a>, le {{mp.formatDate}}</p>
        {{#if isOwner}}
        <div class="adminButtonsCont">
            <a class="button" href="/mp/{{mp._id}}">Modifier</a>
            <a class="button" href="/mp/delete/{{mp._id}}">Supprimer</a>
        </div>
        {{/if}}
    </div>
</section>
<div class="comCont">
    <div class="comColumn">
        <section>
            {{#each mpResp}}
            <article class="comEl" id="{{_id}}">
                <div class="bloc">
                    <p class="comHead">Réponse de <a href="/userProfile/{{senderId}}">{{senderName}}</a>, le {{formatDate}}</p>
                    <p class="content">{{{content}}}</p>
                    {{#if isCommentOwner}}
                    <div class="adminButtonsCont">
                        <a class="button" href="/mp/response/edit/{{_id}}">Modifier</a>
                        <a class="button" href="/mp/response/delete/{{_id}}/{{mpId}}">Supprimer</a>
                    </div>
                    {{/if}}
                </div>
            </article>
            {{/each}}
        </section>
        <section class="formContainer bloc">
            <form action="/mp/response/create/{{mp._id}}" method="POST" enctype="multipart/form-data">
                <p>
                    <label for="content">
                        <strong>Votre réponse</strong>
                    </label>
                    <textarea class="textarea" name="content"></textarea>
                    <script>
                        CKEDITOR.replace(
                            ('content'));
                        CKEDITOR.config.entities = false;
                        CKEDITOR.config.entities_latin = false;
                    </script>
                </p>
                <p>
                    <input class="button" type="submit" value="Envoyer" />
                </p>
            </form>
        </section>
    </div>

    <div id="lisere">
        <p> </p>
    </div>
</div>