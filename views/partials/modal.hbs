<aside id="modal2" class="modal" aria-hidden="true" role="dialog" aria-modal="false" style="display: none;">
    <div class="modal-wrapper bloc js-modal-stop">
        <form id="register-form" method="POST" action="/users/add" >
            <p><label for="userName">Entrez votre nom :</label><br />
            <input type="text" name="userName" id="userName" value="{{messages.data.userName}}"/></p>
            <p><label for="userMail">Entrez votre adresse mail :</label><br />
                <input type="email" name="mail" id="mail" value="{{messages.data.mail}}" /></p>
